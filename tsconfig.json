{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
